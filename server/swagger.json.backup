{
  "openapi": "3.0.0",
  "info": {
    "title": "Legal Backend API",
    "description": "A comprehensive backend API for a legal services platform with client management, user administration, and authentication features.",
    "version": "1.0.0",
    "contact": {
      "name": "Legal Backend Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Development server"
    },
    {
      "url": "https://your-app.vercel.app",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    },
    {
      "cookieAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "token"
      }
    },
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique client identifier"
          },
          "fullName": {
            "type": "string",
            "description": "Client's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Client's email address"
          },
          "phone": {
            "type": "string",
            "description": "Client's phone number"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Account creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "fullName", "email", "createdAt", "updatedAt"]
      },
      "ClientInput": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "description": "Client's full name",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Client's email address"
          },
          "phone": {
            "type": "string",
            "description": "Client's phone number (optional)"
          },
          "password": {
            "type": "string",
            "description": "Client's password",
            "minLength": 6
          }
        },
        "required": ["fullName", "email", "password"]
      },
      "ClientLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Client's email address"
          },
          "password": {
            "type": "string",
            "description": "Client's password"
          }
        },
        "required": ["email", "password"]
      },
      "ClientUpdate": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "description": "Client's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Client's email address"
          },
          "phone": {
            "type": "string",
            "description": "Client's phone number"
          },
          "password": {
            "type": "string",
            "description": "New password (will be hashed)",
            "minLength": 6
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique user identifier"
          },
          "name": {
            "type": "string",
            "description": "User's name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "role": {
            "type": "string",
            "enum": ["user", "admin"],
            "description": "User's role"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Account creation timestamp"
          }
        },
        "required": ["id", "name", "email", "role", "createdAt"]
      },
      "UserInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "password": {
            "type": "string",
            "description": "User's password"
          },
          "role": {
            "type": "string",
            "enum": ["user", "admin"],
            "description": "User's role",
            "default": "user"
          }
        },
        "required": ["name", "email", "password"]
      },
      "UserUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "password": {
            "type": "string",
            "description": "New password"
          },
          "role": {
            "type": "string",
            "enum": ["user", "admin"],
            "description": "User's role"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "$ref": "#/components/schemas/Client"
          }
        }
      },
      "UserAuthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "ProfileResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "fullName": {
                "type": "string"
              },
              "phone": {
                "type": "string"
              },
              "role": {
                "type": "string",
                "enum": ["client"]
              }
            }
          }
        }
      },
      "ListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "oneOf": [
                {"$ref": "#/components/schemas/Client"},
                {"$ref": "#/components/schemas/User"}
              ]
            }
          }
        }
      },
      "DeleteResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of deleted item"
              }
            }
          }
        }
      },
      "BulkDeleteResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "deleted": {
                "type": "integer",
                "description": "Number of items deleted"
              }
            }
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "News": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique news article identifier"
          },
          "title": {
            "type": "string",
            "description": "News article title"
          },
          "content": {
            "type": "string",
            "description": "Full article content"
          },
          "author": {
            "type": "string",
            "description": "Article author"
          },
          "category": {
            "type": "string",
            "description": "Article category"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Article tags"
          },
          "published": {
            "type": "boolean",
            "description": "Publication status",
            "default": false
          },
          "views": {
            "type": "integer",
            "description": "View count",
            "default": 0
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "title", "content", "author", "createdAt", "updatedAt"]
      },
      "NewsInput": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "News article title",
            "minLength": 1
          },
          "content": {
            "type": "string",
            "description": "Full article content",
            "minLength": 1
          },
          "author": {
            "type": "string",
            "description": "Article author",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "description": "Article category (optional)"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Article tags (optional)"
          },
          "published": {
            "type": "boolean",
            "description": "Publication status",
            "default": false
          }
        },
        "required": ["title", "content", "author"]
      },
      "NewsUpdate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "News article title"
          },
          "content": {
            "type": "string",
            "description": "Full article content"
          },
          "author": {
            "type": "string",
            "description": "Article author"
          },
          "category": {
            "type": "string",
            "description": "Article category"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Article tags"
          },
          "published": {
            "type": "boolean",
            "description": "Publication status"
          }
        }
      },
      "Query": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique query identifier"
          },
          "userId": {
            "type": "string",
            "description": "ID of the user who submitted the query"
          },
          "title": {
            "type": "string",
            "description": "Query title"
          },
          "description": {
            "type": "string",
            "description": "Detailed query description"
          },
          "category": {
            "type": "string",
            "description": "Query category"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Query priority level",
            "default": "low"
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "resolved", "closed"],
            "description": "Query status",
            "default": "open"
          },
          "responses": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of responses to the query"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "userId", "title", "description", "createdAt", "updatedAt"]
      },
      "QueryInput": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "ID of the user submitting the query"
          },
          "title": {
            "type": "string",
            "description": "Query title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed query description",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "description": "Query category"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Query priority level",
            "default": "low"
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "resolved", "closed"],
            "description": "Query status",
            "default": "open"
          }
        },
        "required": ["userId", "title", "description"]
      },
      "QueryUpdate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Query title"
          },
          "description": {
            "type": "string",
            "description": "Detailed query description"
          },
          "category": {
            "type": "string",
            "description": "Query category"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Query priority level"
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "resolved", "closed"],
            "description": "Query status"
          },
          "responses": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of responses"
          }
        }
      },
      "ViewIncrementResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "views": {
                "type": "integer",
                "description": "Updated view count"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/clients": {
      "post": {
        "tags": ["Clients"],
        "summary": "Register a new client",
        "description": "Create a new client account with the provided information.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInput"
              },
              "example": {
                "fullName": "John Doe",
                "email": "john.doe@example.com",
                "phone": "+1-555-0101",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Client created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "missingFields": {
                    "value": {
                      "success": false,
                      "error": "fullName is required"
                    }
                  },
                  "invalidPassword": {
                    "value": {
                      "success": false,
                      "error": "password must be at least 6 chars"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "email already in use"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Clients"],
        "summary": "Get all clients",
        "description": "Retrieve a list of all registered clients. This is typically an admin operation.",
        "responses": {
          "200": {
            "description": "List of clients retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Clients"],
        "summary": "Delete all clients",
        "description": "⚠️ DANGER: Delete all client records. This operation cannot be undone.",
        "responses": {
          "200": {
            "description": "All clients deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BulkDeleteResponse"
                },
                "example": {
                  "success": true,
                  "data": {
                    "deleted": 42
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/login": {
      "post": {
        "tags": ["Clients"],
        "summary": "Authenticate a client",
        "description": "Login with email and password. Returns client data and sets JWT cookie.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientLogin"
              },
              "example": {
                "email": "john.doe@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "email and password are required"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "invalid credentials"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/logout": {
      "post": {
        "tags": ["Clients"],
        "summary": "Logout client",
        "description": "Clear the JWT authentication cookie and log out the current client.",
        "security": [
          {"bearerAuth": []},
          {"cookieAuth": []}
        ],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                },
                "example": {
                  "success": true,
                  "message": "Logged out successfully"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/me": {
      "get": {
        "tags": ["Clients"],
        "summary": "Get current client profile",
        "description": "Retrieve the profile information of the currently authenticated client.",
        "security": [
          {"bearerAuth": []},
          {"cookieAuth": []}
        ],
        "responses": {
          "200": {
            "description": "Profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProfileResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/{id}": {
      "get": {
        "tags": ["Clients"],
        "summary": "Get client by ID",
        "description": "Retrieve a specific client by their unique identifier.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Client ID",
            "example": "abc123"
          }
        ],
        "responses": {
          "200": {
            "description": "Client found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "404": {
            "description": "Client not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "not found"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Clients"],
        "summary": "Update client",
        "description": "Update a client's information. All fields are optional.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Client ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientUpdate"
              },
              "example": {
                "fullName": "John Smith",
                "phone": "+1-555-0199"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Client updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "404": {
            "description": "Client not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Email already in use",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Clients"],
        "summary": "Delete client",
        "description": "Delete a specific client by their ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Client ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Client deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                }
              }
            }
          },
          "404": {
            "description": "Client not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "Create a new user account. Typically for admin operations.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              },
              "example": {
                "name": "Admin User",
                "email": "admin@example.com",
                "password": "securepass123",
                "role": "admin"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAuthResponse"
                }
              }
            }
